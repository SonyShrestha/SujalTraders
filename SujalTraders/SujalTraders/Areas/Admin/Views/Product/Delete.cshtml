@model Product
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<partial name="_Notification" />
<form method="post">
    <div class="form-group">
        <label asp-for="ProductCode"></label>
        <input asp-for="ProductCode" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="AvailableQuantity"></label>
        <input asp-for="AvailableQuantity" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="UnitPrice"></label>
        <input asp-for="UnitPrice" class="form-control" disabled />
    </div>

    <button type="submit" class="btn btn-primary">Delete</button>
    <a class="btn btn-secondary" asp-controller="Product" asp-action="Index"> Back To List</a>

</form>
