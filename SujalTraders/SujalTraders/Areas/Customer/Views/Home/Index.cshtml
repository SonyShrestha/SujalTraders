@model IEnumerable<SujalTraders.Models.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach(var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="row p-2">
                        <div class="col-12 p-1" style="border:1px solid #000000; border-radius:5px;">
                            <div class="card">
                                <img src="@product.ImageURL" class="card-img-top-rounded" />
                                <div class="pl-1">
                                    <p class="card-title h5 text-primary">@product.Name</p>
                                    <p class="card-title text-secondary">@product.ProductSubCategory.Name</p>
                                </div>
                                <div class="pl-1">
                                    <p>Price: Rs @product.UnitPrice</p>
                                </div>
                            </div>
                            <div>
                                <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
</div>